@@ -13,7 +13,11 @@ if test x_$enable_sse3 = x_yes ; then
     [Define to 1 if you want to use SSE3 optimizations])
 # put compiler specific flags here
   if test x_$ac_cv_c_compiler_gnu = x_yes ; then
