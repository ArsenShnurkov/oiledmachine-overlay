+      CFLAGS="-msse2 -mfpmath=sse ${CFLAGS}"
+      if test -z "echo $CFLAGS | grep march=" ; then
+        CFLAGS="-march=opteron ${CFLAGS}"
+      fi
+    else
+      CFLAGS="-msse2 -mfpmath=sse ${CFLAGS}"
+      if test -z "echo $CFLAGS | grep march=" ; then
